<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.geometry.Insets?>
<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controllers.MainWindowController" styleClass="background" stylesheets="@style.css">
    <top >
        <Label text=" Welcome to The Cloud Library "
               BorderPane.alignment="CENTER" styleClass="welcome-label" stylesheets="@style.css">
            <font>
                <Font name="System Bold Italic" />
            </font>
        </Label>

    </top>

    <left>
        <VBox  spacing="20.0" >
   <children>
       <Button text="Base" onAction="#handleBase" styleClass="button" stylesheets="@style.css"/>
                <Button text="Service" onAction="#handleService" styleClass="button" stylesheets="@style.css"/>
                <Button text="Contact us " onAction="#handleContactUs" styleClass="button" stylesheets="@style.css"/>
              </children>
            </VBox>
        </left>
    <center>
        <ImageView fx:id="img" layoutX="29.0" layoutY="44.0" fitHeight="224.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" >
            <image>
                <Image url="@bookInCloud.png" />
            </image>
        </ImageView>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    </BorderPane>
